# ─── MoltyDEX API Configuration ───────────────────────────────────────
# Copy this file to .env and fill in your values.

# Server
PORT=3001
NODE_ENV=production

# Solana RPC (required for production — get a free key at https://www.alchemy.com or https://www.helius.dev)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Jupiter aggregator (optional — get a key at https://portal.jup.ag for higher rate limits)
JUPITER_API_KEY=

# Fee configuration (0 = no platform fees)
FEE_BPS=0
FEE_WALLET=

# CORS — comma-separated list of allowed origins
CORS_ORIGINS=https://moltydex.com

# Analytics tracking (optional — protects POST /api/analytics/track)
ANALYTICS_API_KEY=

# Upstash Redis (optional — enables persistent swap tracking, points, leaderboard)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Debug (optional — set to 'true' to enable /api/analytics/debug in production)
ENABLE_DEBUG=false

# Demo mode (optional — set to '1' for demo/local mode)
DEMO_MODE=0
